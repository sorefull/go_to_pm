<%= link_to 'Landing', landing_path, class: 'btn btn-primary' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone number</th>
      <th>Vacations count</th>
      <th>Day off count</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= link_to user.email, user %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.vacation_count %></td>
        <td><%= user.day_off_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users, renderer: BootstrapPagination::Rails %><br>
<%= link_to 'New user', new_user_path, class: 'btn btn-success' %>
