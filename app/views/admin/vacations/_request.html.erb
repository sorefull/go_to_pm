<div class="modal fade" tabindex="-1" role="dialog" id="my_modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Vacation Info</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <b>Vacation type:</b> <%= @vacation.vacation_type %>
          </div>

        </div>
        <div class="row vert-offset-top-1">
          <div class="col-md-12">
            <b>
              First and last name:
            </b>
          </div>
          <div class="col-md-12">
            <%= @vacation.user.first_name %>
            <%= @vacation.user.last_name %>
          </div>
        </div>

        <div class="row vert-offset-top-1">
          <div class="col-md-3">
            <b>Vacation count:</b>
          </div>
          <div class="col-md-9">
            <%= @vacation.user.vacation_count %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            <b>Day off count:</b>
          </div>
          <div class="col-md-9">
            <%= @vacation.user.day_off_count %>
          </div>
        </div>

          <div class="row vert-offset-top-1">
            <div class="col-md-12">
              <%= bootstrap_form_for [:admin, @vacation] do |f| %>
                <%= f.select :vacation_type, Vacation.vacation_types.keys %>
                <%= f.date_field :start_time %>
                <%= f.date_field :end_time %>
                <%= f.text_field :offset %>
                <%= f.text_area :comment %>
                <%= f.submit :approve, class: 'btn btn-success' %>
                <%= f.submit :delete, class: 'btn btn-danger', name: 'delete' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
