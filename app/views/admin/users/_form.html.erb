<%= bootstrap_form_for [:admin, @user] do |f| %>
<div class="col-md-6">
  <%= f.text_field :name %>
  <%= f.text_field :status, label: 'Role' %>
  <%= f.email_field :email %>
  <%= f.date_field :birth_date %>
  <%= f.text_field :skype_username %>
  <%= f.telephone_field :phone_number %>
  <%= f.date_field :start_date %>
  <%= f.text_area :comment %>
</div>
<div class="col-md-5 col-md-offset-1">
  <%= image_tag @user.avatar.thumb.url, class: 'img-rounded' %>
  <%= f.file_field :avatar %>
  <%= f.text_field :vacation_count %>
  <%= f.text_field :day_off_count %>
</div>
<div class="col-md-12">
  <%= f.submit :save, class: 'btn btn-success btn-large' %>
</div>
<% end %>
